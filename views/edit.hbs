<body>
  

<!-- Simple form which will send a POST request -->
<form action="/products/{{id}}?_method=PUT" method="PUT">
  <label for="PUT-name">Name:</label>
  <input id="PUT-name" type="text" name="name"value = '{{name}}'>

  <label for="PUT-price">Price:</label>
  <input id="PUT-price" type="text" name="price"value = '{{price}}'>

  <label for="PUT-inventory">Inventory:</label>
  <input id="PUT-inventory" type="text" name="inventory"value = '{{inventory}}'>

  <input type="submit" value="Submit">
</form>
</form>
</body>
